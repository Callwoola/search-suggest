<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="phpunit.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         syntaxCheck="true"
         verbose="true"
        >
    <testsuites>
        <testsuite name="Search">
            <directory>./tests/IndexTest.php</directory>
        </testsuite>
    </testsuites>
    <php>

        <env name="SEARCH_ELASTICSEARCH_URL" value="http://127.0.0.1:9200"/>
        <env name="SEARCH_LOG" value=""/>

        <env name="MYSQL_HOST" value="localhost"/>
        <env name="MYSQL_USERNAME" value="homestead"/>
        <env name="MYSQL_PASSWORD" value="secret"/>
        <env name="MYSQL_DATABASE" value=""/>

        <env name="SEARCH_HIGH_LIGHT_ELEMENT_PREFIX" value=""/>

        <env name="REDIS_CLUSTER" value="false"/>
        <env name="REDIS_DEFAULT_HOST" value="127.0.0.1"/>
        <env name="REDIS_DEFAULT_PORT" value="6379"/>
        <env name="REDIS_DEFAULT_DATABASE" value=""/>

        <get name="keyword" value=""/>
        <get name="keywords" value=""/>
        <get name="keywords_with_interference" value="!@#$%^"/>
        <get name="pagesize" value="1"/>
    </php>
</phpunit>